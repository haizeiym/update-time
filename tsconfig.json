{
  "compilerOptions": {
    "module": "ESNext", // 生成 ESModule 格式
    "target": "ES5",
    "moduleResolution": "node",
    "esModuleInterop": true, // 使得 CommonJS 模块能够正确导入
    "outDir": "./dist", // 输出目录
    "declaration": true, // 生成类型声明文件
    "declarationDir": "./dist/types", // 输出类型声明文件目录
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}