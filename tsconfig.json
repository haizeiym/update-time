{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}